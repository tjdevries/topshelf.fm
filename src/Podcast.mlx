module EpisodeComp = struct
  type state =
    { expanded : bool
    ; other : string
    }

  type action = ToggleExpanded

  let reducer state = function
    | ToggleExpanded -> { state with expanded = not state.expanded }
  ;;

  let[@react.component] make ~(episode : Feed.item) =
    let state, dispatch =
      React.useReducer reducer { expanded = false; other = "" }
    in
    let description_class = if state.expanded then "" else "hidden" in
    let body =
      <div className=("border border-white p-4 m-4 " ^ description_class)
           dangerouslySetInnerHTML=(dangerousHtml episode.description) />
    in
    <div className="border border-green-400 p-4 rounded-md hover:bg-green-400 \
                    hover:text-black transition-colors"
         onClick=(fun _ -> dispatch ToggleExpanded)>
      <div className="flex justify-between items-center">
        <h4 className="text-lg font-semibold">(string episode.title)</h4>
        <span className="text-sm">(string episode.duration)</span>
      </div>
      body
      <a href=episode.link
         onClick=(fun e -> React.Event.Mouse.stopPropagation e)>
        <Components.Button variant="outline"
                           className="mt-2 text-xs border-green-400 \
                                      text-green-400 hover:bg-green-400 \
                                      hover:text-black">
          (string "Goto Episode")
        </Components.Button>
      </a>
    </div>
  ;;
end

